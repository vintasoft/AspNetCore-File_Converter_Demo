@{
    ViewBag.Title = "VintaSoft File Converter Demo (ASP.NET Core)";
    Layout = "~/Views/Shared/_DemoViewLayout.cshtml";
}

@section demoDescription{
    <h1>VintaSoft File Converter Demo (ASP.NET Core)</h1>
}

@section requiredScripts {
    <link href="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/FileConverterDemo.css")" rel="stylesheet" />

    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Shared.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Dialogs.Bootstrap.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/UI/Controls/WebFileConverterDemoControl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/DocumentRenderingSettingsDialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/ImageEncoderSettingsDialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/FileConversionProgressDialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/FileConversionResultDialog.js")" type="text/javascript"></script>
}

@section demoContent{
    <div id="fileConverterDemoControl">
        <br />
        This demo allows to convert any supported input image file format to any supported output image file format.<br />
        <br />
        Supported input image file formats: BMP, CUR, CSV, DICOM, DOC, DOCX, EMF, GIF, ICO, JBIG2, JPEG, JPEG 2000, JPEG-LS, ODS, ODT, PBM/PGM/PPM, PCX, PDF, PNG, PSD, RAW (DNG, CR2, CRW, NEF, NRW), RTF, SVG, TGA, TIFF, TSV, WEBP, WMF, XLS, XLSX.<br />
        <br />
        Supported output image file formats: BMP, DOCX, GIF, JBIG2, JPEG, JPEG 2000, PBM/PGM/PPM, PCX, PDF, PNG, PSD, SVG, TGA, TIFF, WEBP, XLSX.<br />
        <br />
        Special file conversions: DOCX=&gt;HTML, HTML=&gt;DOCX.<br />
        <br />
        <h2 id="activeFileId"></h2>
        <br />
        <input id="uploadFileButton" localizationId="uploadFileButton" type="button" title="Upload Image File" value="Upload Image File" name="UploadImageFile" />
        <input id="uploadImageFile" type="file" title="Upload Image File" name="UploadImageFile"/>
        <br />
        <label for="fileTypeSelect" localizationId="resultFileFormatLabel">Result file type:</label>
        <select id="fileTypeSelect" disabled>
            <option value="BMP">BMP</option>
            <option value="DOCX">DOCX</option>
            <option value="GIF">GIF</option>
            <option value="HTML">HTML</option>
            <option value="JBIG2">JBIG2</option>
            <option value="JPEG">JPEG</option>
            <option value="JPEG2000">JPEG 2000</option>
            <option value="PBM">PBM/PGM/PPM</option>
            <option value="PCX">PCX</option>
            <option value="PDF">PDF</option>
            <option value="PDF MRC">PDF MRC</option>
            <option value="PNG">PNG</option>
            <option value="PSD">PSD</option>
            <option value="SVG">SVG</option>
            <option value="TGA">TGA</option>
            <option value="TIFF">TIFF</option>
            <option value="WEBP">WEBP</option>
            <option value="XLSX">XLSX</option>
        </select>
        <input type="button" id="convertButton" localizationId="convertButton" value="Convert" disabled />
    </div>

    @Html.Partial("UI/Dialogs/BlockUiDialog")
    @Html.Partial("UI/Dialogs/DocumentRenderingSettingsDialog")
    @Html.Partial("UI/Dialogs/FileConversionProgressDialog")
    @Html.Partial("UI/Dialogs/FileConversionResultDialog")
    
    <script src="@Url.Content("~/js/WebPdfMrcEncoderSettingsJS.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/FileConverterDemo.js")" type="text/javascript"></script>
}
