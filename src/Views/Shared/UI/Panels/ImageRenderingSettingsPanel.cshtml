<script src="@Url.Content("~/js/UI/Panels/ImageRenderingSettingsPanel.js")" type="text/javascript"></script>
<div id="renderingSettingsPanel" localizationId="renderingSettingsPanel">
    <table>
        <tr>
            <td><label for="renderingSettingsHorizontalResolution" localizationId="horResLabel">Horizontal Resolution:</label></td>
            <td><input id="renderingSettingsHorizontalResolution" type="number" step="1" value="0" min="0"/></td>
        </tr>
        <tr>
            <td><label for="renderingSettingsVerticalResolution" localizationId="vertResLabel">Vertical Resolution:</label></td>
            <td><input id="renderingSettingsVerticalResolution" type="number" step="1" value="0" min="0"/></td>
        </tr>
        <tr>
            <td><label localizationId="smoothingLabel">Smoothing Mode:</label></td>
            <td>
                <select id="renderingSettingsSmoothingMode">
                    <option>AntiAlias</option>
                    <option>None</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label localizationId="interpolationLabel">Interpolation Mode:</label></td>
            <td>
                <select id="renderingSettingsInterpolationMode">
                    <option value="Bicubic">Bicubic</option>
                    <option value="Bilinear">Bilinear</option>
                    <option value="NearestNeighbor">NearestNeighbor</option>
                    <option value="HighQualityBilinear" selected>HighQualityBilinear</option>
                    <option value="HighQualityBicubic">HighQualityBicubic</option>
                </select>
            </td>
        </tr>
    </table>
</div>
